<%= simple_form_for(booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :beginning_time %>
    <%= f.input :ending_time %>
    <%= f.association :court, collection: Court.all, prompt: 'Select Court' %>
    <%= f.association :user, collection: User.all, prompt: 'Select User' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
